{
  "schema": "1.0",
  "settings": {
    "width": 1080,
    "height": 1350,
    "background_color": "#000000"
  },
  "layers": {
    "background": {
      "elements": {
        "photo_bg": {
          "type": "image",
          "values": {
            "image_path": "--${background_image}--",
            "width": 1080,
            "height": 1350
          }
        }
      }
    },
    "overlay_panel": {
      "elements": {
        "main_panel": {
          "type": "rectangle",
          "rel_position": {
            "source": "alignment",
            "value": {
              "x": "center",
              "y": "center"
            }
          },
          "values": {
            "fill": {
              "red": 120,
              "blue": 200,
              "green": 120,
              "alpha": 20
            },
            "width": 650,
            "height": 750,
            "outline": [
              255,
              255,
              255,
              110
            ],
            "outline_width": 2,
            "border_radius": 10
          }
        },
        "tagline_text": {
          "type": "text",
          "rel_position": {
            "source": "alignment",
            "value": {
              "x": "center",
              "y": "10%"
            },
            "parent": "main_panel"
          },
          "values": {
            "text": "--${tagline_text}--",
            "font_size": 36,
            "fill": "#FFFFFF",
            "max_width": 1000,
            "wrap_style": "word",
            "text_alignment": "center"
          }
        },
        "title_text": {
          "type": "text",
          "rel_position": {
            "source": "alignment",
            "value": {
              "x": "50%",
              "y": "center"
            },
            "parent": "main_panel",
            "offset": {
              "y": -20
            }
          },
          "values": {
            "text": "--${title_text}--",
            "font_size": 56,
            "fill": "#bc4841",
            "max_width": 400,
            "text_alignment": "center"
          }
        },
        "details_text": {
          "type": "text",
          "rel_position": {
            "source": "alignment",
            "value": {
              "x": "center",
              "y": "70%"
            },
            "parent": "main_panel"
          },
          "values": {
            "text": "--${details_text}--",
            "font_size": 32,
            "fill": "#FFFFFF",
            "max_width": 1000,
            "wrap_style": "word",
            "text_alignment": "center"
          }
        }
      }
    }
  }
}